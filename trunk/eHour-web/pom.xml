<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>net.rrm.ehour</groupId>
		<artifactId>eHour</artifactId>
		<version>0.8.3-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>net.rrm.ehour</groupId>
	<artifactId>eHour-web</artifactId>
	<packaging>war</packaging>
	<name>eHour web UI</name>
	<version>${parent.version}</version>

	<build>
		<plugins>
			<plugin>
				<artifactId>jetty-maven-plugin</artifactId>
				<groupId>org.mortbay.jetty</groupId>
				<version>7.0.0pre3</version>
				<configuration>
					<contextPath>/ehour</contextPath>
					<scanIntervalSeconds>3</scanIntervalSeconds>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8090</port>
							<host>0.0.0.0</host>
						</connector>
					</connectors>
					<jettyEnvXml>${basedir}/src/test/resources/jetty-env-mysql.xml</jettyEnvXml>
				</configuration>
			</plugin>
				
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>src/main/java</directory>
				<includes>
					<include>**</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>env-prod-derby</id>
			<activation>
				<property>
					<name>env</name>
					<value>prod-derby</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<warSourceExcludes>
								WEB-INF/lib/*.jar
							</warSourceExcludes>
							<archive>
								<manifest>
									<addClasspath>true</addClasspath>
								</manifest>
							</archive>
						</configuration>
					</plugin>
				</plugins>

				<resources>
					<resource>
						<directory>src/main/profiles/prod/standalone</directory>
					</resource>
				</resources>

			</build>
		</profile>
		<profile>
			<id>env-dev-derby</id>
			<activation>
				<property>
					<name>env</name>
					<value>dev-derby</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<warSourceExcludes>
								WEB-INF/lib/*.jar
							</warSourceExcludes>
							<archive>
								<manifest>
									<addClasspath>true</addClasspath>
								</manifest>
							</archive>
						</configuration>
					</plugin>
				</plugins>

				<resources>
					<resource>
						<directory>src/main/profiles/dev</directory>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>env-prod-mysql</id>
			<activation>
				<property>
					<name>env</name>
					<value>prod-mysql</value>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<directory>src/main/profiles/prod/war</directory>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>env-dev-mysql</id>
			<activation>
				<property>
					<name>env</name>
					<value>dev-mysql</value>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<directory>src/main/profiles/dev</directory>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>net.rrm.ehour</groupId>
			<artifactId>eHour-service</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>net.rrm.ehour</groupId>
			<artifactId>eHour-wicketweb</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>net.rrm.ehour</groupId>
			<artifactId>eHour-audit</artifactId>
			<version>${pom.version}</version>
		</dependency>
	</dependencies>
</project>
