<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.rrm.ehour.domain.UserDepartment" table="USER_DEPARTMENT">
		<!--  <cache usage="read-write" />  -->
		<id name="departmentId" type="integer">
			<column name="DEPARTMENT_ID" />
			<generator class="native" />
		</id>
		<property name="name" type="string">
			<column name="NAME" length="512" not-null="true">
			</column>
		</property>
		<property name="code" type="string">
			<column name="CODE" length="64" not-null="true">
			</column>
		</property>
		
	    <set name="users" inverse="true" lazy="true">
	    	<key column="DEPARTMENT_ID" />
	        <one-to-many class="net.rrm.ehour.domain.User"/>
	    </set>
	</class>
</hibernate-mapping>
