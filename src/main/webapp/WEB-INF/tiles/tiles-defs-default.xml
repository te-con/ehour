<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

    <!-- Base layout -->
    <definition name=".ehour.baseLayout" path="/WEB-INF/jsp/layout/layoutBase.jsp">
        <put name="pageTitle" value="eHour" />
        <put name="header" value="/WEB-INF/jsp/nav/navHeader.jsp" />
		<put name="navCalendar" value="/WEB-INF/jsp/nav/nothing.html" />
		<put name="contextHelp" value="/WEB-INF/jsp/help/help.jsp" />
		<put name="helpHeader" value="" />		
		<put name="helpBody" value="" />		
		<put name="extraCss" value="" />
    </definition>

    <!-- Timesheet Overview layout page -->
    <definition name=".ehour.timesheet.overviewFull" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/eh/cal/navCalendar.do" />
        <put name="content" value="/WEB-INF/jsp/timesheet/overviewLayout.jsp" />
        <put name="subContent" value="/WEB-INF/jsp/timesheet/overview.jsp" />        
    	<put name="extraCss" value="/css/ehourTimesheet.jsp" />
    	<put name="helpHeader" value="overview.header" />    	
    	<put name="helpBody" value="overview.body" /> 
    </definition>

    <!-- Timesheet Month Overview page -->
    <definition name=".ehour.timesheet.overview" path="/WEB-INF/jsp/timesheet/overview.jsp" />

    <!-- Timesheet Timesheet form page -->
    <definition name=".ehour.timesheet.timesheet" path="/WEB-INF/jsp/timesheet/timesheet.jsp" />

    <!-- Timesheet Timesheet form page - standalone -->
    <definition name=".ehour.timesheet.timesheet.standalone" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/eh/cal/navCalendar.do" />
        <put name="content" value="/WEB-INF/jsp/timesheet/overviewLayout.jsp" />
        <put name="subContent" value="/WEB-INF/jsp/timesheet/timesheet.jsp" />
    	<put name="extraCss" value="/css/ehourTimesheet.jsp" />
    	<put name="helpHeader" value="timesheet.header" />    	
    	<put name="helpBody" value="timesheet.body" /> 
    </definition>

    <!-- Timesheet contextual help -->
    <definition name=".ehour.timesheet.help" path="/WEB-INF/jsp/help/help.jsp">
		<put name="helpHeader" value="timesheet.header" />		
		<put name="helpBody" value="timesheet.body" />		
    </definition>

    <!-- Timesheet print layout -->
    <definition name=".ehour.timesheet.printLayout"  extends=".ehour.baseLayout">
        <put name="navCalendar" value="/eh/cal/navCalendar.do" />
    	<put name="extraCss" value="/css/ehourTimesheet.jsp" />
        <put name="content" value="/WEB-INF/jsp/timesheet/printLayout.jsp" />
        <put name="subContent" value="/WEB-INF/jsp/timesheet/printForm.jsp" />        
    	<put name="helpHeader" value="print.header" />    	
    	<put name="helpBody" value="print.body" /> 
    </definition>

    <!-- Timesheet print sheet -->
    <definition name=".ehour.timesheet.printSheet" page="/WEB-INF/jsp/timesheet/printSheet.jsp" />

    <!-- Timesheet print month form -->
    <definition name=".ehour.timesheet.printForm"  page="/WEB-INF/jsp/timesheet/printForm.jsp" />

    <!-- User report Overview page -->
    <definition name=".ehour.userreport.overview" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/WEB-INF/jsp/userReport/criteria.jsp" />
        <put name="content" value="/WEB-INF/jsp/userReport/reportLayout.jsp" />
    	<put name="extraCss" value="/css/ehourReport.jsp" />        
    </definition>

    <!-- User report projectReport -->    
    <definition name=".ehour.userreport.projectReport" path="/WEB-INF/jsp/userReport/projectReport.jsp" />
    
    <!-- NavCalendar -->
    <definition name=".ehour.calendar.navCalendar" path="/WEB-INF/jsp/nav/navCalendar.jsp" />
    
    <!-- Project manager report layout -->
    <definition name=".ehour.pmreport.layout" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/WEB-INF/jsp/pmReport/reportCriteria.jsp" />
        <put name="content" value="/WEB-INF/jsp/pmReport/reportLayout.jsp" />
    	<put name="extraCss" value="/css/ehourReport.jsp" />        
    </definition>

    <!-- Project manager report -->    
    <definition name=".ehour.pmReport.projectReport" path="/WEB-INF/jsp/pmReport/projectReport.jsp" />
    <definition name=".ehour.pmReport.noProjectSelected" path="/WEB-INF/jsp/pmReport/noReport.jsp" />

</tiles-definitions>
