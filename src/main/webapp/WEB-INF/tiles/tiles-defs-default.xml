<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

    <!-- Base layout -->
    <definition name=".ehour.baseLayout" path="/WEB-INF/jsp/layout/layoutBase.jsp">
        <put name="pageTitle" value="eHour" />
        <put name="header" value="/WEB-INF/jsp/nav/navHeader.jsp" />
		<put name="navCalendar" value="/WEB-INF/jsp/nav/nothing.html" />
		<put name="contextHelp" value="/WEB-INF/jsp/help/help.jsp" />		
		<put name="extraCss" value="" />
    </definition>

    <!-- Timesheet Overview layout page -->
    <definition name=".ehour.timesheet.overviewFull" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/eh/cal/navCalendar.do" />
        <put name="content" value="/WEB-INF/jsp/timesheet/overviewLayout.jsp" />
    	<put name="extraCss" value="/css/ehourTimesheet.jsp" />
    </definition>

    <!-- Timesheet Month Overview page -->
    <definition name=".ehour.timesheet.overview" path="/WEB-INF/jsp/timesheet/overview.jsp" />

    <!-- Timesheet Timesheet form page -->
    <definition name=".ehour.timesheet.timesheet" path="/WEB-INF/jsp/timesheet/timesheet.jsp" />

    <!-- User report Overview page -->
    <definition name=".ehour.userreport.overview" extends=".ehour.baseLayout">
        <put name="navCalendar" value="/WEB-INF/jsp/nav/nothing.html" />
        <put name="content" value="/WEB-INF/jsp/userReport/index.jsp" />
    </definition>



    <!-- NavCalendar -->
    <definition name=".ehour.calendar.navCalendar" path="/WEB-INF/jsp/nav/navCalendar.jsp" />

</tiles-definitions>
