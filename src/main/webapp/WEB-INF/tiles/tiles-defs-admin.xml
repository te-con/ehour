<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

    <!-- Admin base layout -->
    <definition name=".ehour.admin.baseLayout" extends=".ehour.baseLayout">
        <put name="pageTitle" value="eHour - admin" />
        <put name="header" value="/WEB-INF/jsp/nav/navHeader.jsp" />
        <put name="calendar_small" value="/WEB-INF/jsp/nav/navAdmin.jsp" />
    </definition>

    <!-- Admin index -->
    <definition name=".ehour.admin.index" extends=".ehour.admin.baseLayout">
        <put name="content" value="/WEB-INF/jsp/admin/index.jsp" />
    </definition>

    <!-- Admin department index -->
    <definition name=".ehour.admin.dept.index" extends=".ehour.admin.baseLayout">
       	<put name="headJs" value="/js/dojo.jsp" />
        <put name="content" value="/WEB-INF/jsp/admin/dept/index.jsp" />
    </definition>

    <!-- Admin department list index -->
    <definition name=".ehour.admin.dept.list" path="/WEB-INF/jsp/admin/dept/listUserDepartments.jsp" />

    <!-- Admin department edit form (because the spring DelegatingTilesRequestProcessor is used this is here -->
    <definition name=".ehour.admin.dept.editForm" path="/WEB-INF/jsp/admin/dept/editUserDepartmentForm.jsp" />

    <!-- Admin department edit form (because the spring DelegatingTilesRequestProcessor is used this is here -->
    <definition name=".ehour.admin.dept.addForm" path="/WEB-INF/jsp/admin/dept/addUserDepartmentForm.jsp" />

</tiles-definitions>
