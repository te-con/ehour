<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--  Project manager reports -->
	<bean id="abstractPMReportAction"
			class="net.rrm.ehour.web.pmreport.action.BasePMReportAction"
			abstract="true">
		<property name="projectService" ref="projectService" />		
		<property name="reportService" ref="reportService" />
    </bean>		
	
	<bean name="/eh/pmReport/index"
			class="net.rrm.ehour.web.pmreport.action.PMReportCriteriaAction"
			parent="abstractPMReportAction" />
			
	<bean name="/eh/pmReport/projectReport"
			class="net.rrm.ehour.web.pmreport.action.PMCreateReportAction"
			parent="abstractPMReportAction" />			
</beans>