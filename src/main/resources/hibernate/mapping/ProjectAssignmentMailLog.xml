<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.rrm.ehour.project.domain.ProjectAssignmentMailLog" table="PROJECT_ASSIGNMENT_MAIL_LOG">
		<cache usage="read-write" />
		
		<id name="mailLogId" column="PROJECT_ASSIGNMENT_MAIL_ID" type="integer">
			<generator class="identity" />
       	</id>

        <many-to-one name="mailType" outer-join="auto" fetch="join"
                class="net.rrm.ehour.mail.domain.MailType" column="MAIL_TYPE_ID"/>

        <many-to-one name="projectAssignment" outer-join="auto" fetch="join"
                class="net.rrm.ehour.project.domain.ProjectAssignment" column="PROJECT_ASSIGNMENT_ID"/>

		<property name="timestamp" column="TIMESTAMP" type="date"/>
	</class>
</hibernate-mapping>