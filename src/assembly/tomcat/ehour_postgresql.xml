<Context path="/ehour" reloadable="false" cookies="true" docBase="${ehour.home}/app/ehour-@VERSION@.war">
  <Resource name="jdbc/eHourDS"
  			auth="Container"
  			type="javax.sql.DataSource"
            maxActive="100"
            maxIdle="30"
            maxWait="10000"
            username="@ehour.db.username"
	       	password="@ehour.db.password"
	       	driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://@ehour.db.hostname:5432/@ehour.db.name"/>
  <ResourceParams name="jdbc/eHourDS" >
    <parameter>
      <name>validationQuery</name>
      <value>SELECT 1</value>
    </parameter>

    <parameter>
      <name>testOnBorrow</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>zeroDateTimeBehavior</name>
      <value>convertToNull</value>
    </parameter>	
	
	<parameter>
      <name>autoReconnect</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>timeBetweenEvictionRunsMillis</name>
      <value>10000</value>
    </parameter>

    <parameter>
      <name>testWhileIdle</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>minEvictableIdleTimeMillis</name>
      <value>60000</value>
    </parameter>
   </ResourceParams>
</Context>			
