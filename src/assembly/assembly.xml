<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/conf</directory>
			<outputDirectory>conf</outputDirectory>	
			<lineEnding>dos</lineEnding>
		</fileSet>
	</fileSets>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>
