<Context path="/ehour" reloadable="false" cookies="true" docBase="${catalina.home}/deploy/ehour-0.8.1.war">
  <Resource name="jdbc/eHourDS"
  			auth="Container"
  			type="javax.sql.DataSource"
            maxActive="100"
            maxIdle="30"
            maxWait="10000"
            username="@ehour.db.username"
	       	password="@ehour.db.password"
	       	driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://@ehour.db.hostname:3306/@ehour.db.name"/>
  <ResourceParams name="jdbc/eHourDS" >
    <parameter>
      <name>validationQuery</name>
      <value>SELECT 1</value>
    </parameter>

    <parameter>
      <name>testOnBorrow</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>zeroDateTimeBehavior</name>
      <value>convertToNull</value>
    </parameter>	
	
	<parameter>
      <name>autoReconnect</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>timeBetweenEvictionRunsMillis</name>
      <value>10000</value>
    </parameter>

    <parameter>
      <name>testWhileIdle</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>minEvictableIdleTimeMillis</name>
      <value>60000</value>
    </parameter>
   </ResourceParams>
</Context>			
