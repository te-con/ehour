<Context path="/ehour" reloadable="false" cookies="true" docBase="${catalina.home}/deploy/ehour-0.1.war">
  <Resource name="jdbc/eHourDS" auth="Container" type="javax.sql.DataSource"
               maxActive="100" maxIdle="30" maxWait="10000"
               username="@ehour.db.username"
	       password="@ehour.db.password"
	       driverClassName="com.mysql.jdbc.Driver"
               url="jdbc:mysql://@ehour.db.hostname:3306/@ehour.db.name?autoReconnect=true"/>
</Context>
