<ehcache>

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
        maxElementsInMemory="1000"
        eternal="false"
        timeToIdleSeconds="120"
        timeToLiveSeconds="3600"
        overflowToDisk="false"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="120"
        />

	<cache
	    name="net.rrm.ehour.user.domain.UserRole"
	    maxElementsInMemory="50"
	    eternal="true"
	    overflowToDisk="false"
	/>
	
	<cache
	    name="net.rrm.ehour.user.domain.User"
	    maxElementsInMemory="100"
        timeToIdleSeconds="600"
        timeToLiveSeconds="3600"
        overflowToDisk="true"
	/>
	
	<cache
	    name="net.rrm.ehour.project.domain.Project"
	    maxElementsInMemory="50"
        timeToIdleSeconds="600"
        timeToLiveSeconds="3600"
        overflowToDisk="true"
	/>	

	<cache
	    name="net.rrm.ehour.customer.domain.Customer"
	    maxElementsInMemory="50"
        timeToIdleSeconds="600"
        timeToLiveSeconds="3600"
        overflowToDisk="true"
	/>	

	<cache
	    name="net.rrm.ehour.project.domain.ProjectAssignmentType"
	    maxElementsInMemory="50"
	    eternal="true"
	    overflowToDisk="false"
	/>
	
	<cache
	    name="org.hibernate.cache.StandardQueryCache"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>
	
	<cache
		name="query.ProjectAssignment"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>
		
	<cache
		name="query.User"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>	
	
	<cache
		name="query.Department"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>	
	
	<cache
		name="query.CustomerFoldPreference"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>	
	
	<cache
		name="query.Customer"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>
	
	<cache
		name="query.Project"
	    maxElementsInMemory="20"
	    eternal="false"
	    timeToLiveSeconds="3600"
	    overflowToDisk="true"
	/>	
		
</ehcache>