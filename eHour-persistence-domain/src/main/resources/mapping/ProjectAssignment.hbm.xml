<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.rrm.ehour.domain.ProjectAssignment" table="PROJECT_ASSIGNMENT">
		<!--  <cache usage="read-write" /> -->
		
		<id name="assignmentId" column="ASSIGNMENT_ID" type="integer">
			<generator class="native" />
       	</id>

        <many-to-one name="user" class="net.rrm.ehour.domain.User" lazy="false" fetch="join" insert="true">
            <column name="USER_ID" not-null="true" />
        </many-to-one>

        <many-to-one name="project" class="net.rrm.ehour.domain.Project" fetch="join">
            <column name="PROJECT_ID" not-null="true" />
        </many-to-one>

        <property name="hourlyRate" type="java.lang.Float">
            <column name="HOURLY_RATE" precision="9" scale="3" />
        </property>

        <property name="dateStart" type="date">
            <column name="DATE_START" length="10" index="IDX_PA_DATESTART" />
        </property>

        <property name="dateEnd" type="date">
            <column name="DATE_END" length="10" index="IDX_PA_DATEEND" />
        </property>

        <property name="role" type="string" column="ROLE" length="64" />
        
		<property name="active" column="ACTIVE" type="yes_no" index="IDX_PA_ACTIVE" />

        <many-to-one name="assignmentType" outer-join="auto" fetch="join"
                class="net.rrm.ehour.domain.ProjectAssignmentType" column="ASSIGNMENT_TYPE_ID"/>

		<property name="allottedHours" column="ALLOTTED_HOURS" type="float"/>
		<property name="allowedOverrun" column="ALLOTTED_HOURS_OVERRUN" type="float"/>
		<property name="notifyPm" column="NOTIFY_PM_ON_OVERRUN" type="yes_no"/>
	</class>	
</hibernate-mapping>
